{
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    "editor.wordWrap": "on",
    "editor.renderWhitespace": "boundary",
    "editor.minimap.enabled": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.glyphMargin": true,
    "editor.renderIndentGuides": true,
    "editor.formatOnSave": false,
    "editor.renameOnType": true,
    "editor.renderControlCharacters": true,
    "editor.rulers": [90, 110],
    "editor.tabSize": 4,
    "editor.lineHeight": 26,
    "editor.fontSize": 17,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'JetBrains Mono NL'",
    // "editor.fontFamily": "'Fira Code'",
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.bracketPairColorization.enabled": true,
    "editor.snippetSuggestions": "top",
    "editor.guides.indentation": true,

    "workbench.iconTheme": "material-icon-theme",

    "gulp.autoDetect": "on",
    "html.format.contentUnformatted": "",
    "jsannotations.enabled": false,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "git.autofetch": true,
    "git.confirmSync": false,
    "sync.gist": "4cfe81ae09625d16e45b864ebe88892f",
    "diffEditor.ignoreTrimWhitespace": false,
    "breadcrumbs.enabled": true,

    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",

    "terminal.integrated.fontSize": 16,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontFamily": "MesloLGS NF",

    "emmet.showSuggestionsAsSnippets": true,
    "emmet.includeLanguages": {
        "vue-html": "html",
        "javascript": "javascriptreact",
        "typescript": "typescriptreact"
    },

    "sass.format.debug": true,
    "sass.lint.enable": true,

    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,

    "liveSassCompile.settings.generateMap": true,
    "liveSassCompile.settings.autoprefix": null,
    "liveSassCompile.settings.formats": [
        // {
        //     "format": "expanded",
        //     "extensionName": ".css",
        //     "savePath": null
        // },
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "~/css"
        }
    ],

    "eslint.format.enable": true,
    "eslint.lintTask.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.validate": ["javascript", "typescript"],
    "eslint.codeAction.showDocumentation": { "enable": true },
    "eslint.rules.customizations": [{ "rule": "semi", "severity": "warn" }],

    "prettier.singleQuote": true,
    "prettier.semi": true,
    "prettier.vueIndentScriptAndStyle": true,
    "prettier.printWidth": 110,
    "prettier.tabWidth": 4,

    "javascript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "always",

    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",

    "extensions.autoCheckUpdates": false,
    "update.showReleaseNotes": false,
    "update.mode": "none",

    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,

    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[less]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[sass]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[php]": {
        // "editor.formatOnSave": true,
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
        "editor.rulers": [80, 100],
    },

    "npm-scripts.showStartNotification": false,
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "stash-push:command",
        "switch:command"
    ]
}
